<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainplay"
    android:background="@drawable/main_media_play" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center|top" android:orientation="vertical">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/artist1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        layout="@layout/layout_main_picture" />
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        layout="@layout/layout_seekbar"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        layout="@layout/layout_control_status"/>
    
</LinearLayout>
